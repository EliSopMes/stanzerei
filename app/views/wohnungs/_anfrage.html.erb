<h4 style=" margin-bottom:20px;"><strong>Wohnung anfragen:</strong></h4>
<%= simple_form_for [@wohnung, @anfrage] do |f| %>
  <%= f.error_notification %>
  <div class="d-flex">
    <%= f.input :von,
                 as: :date,
                 autofocus: true,
                 label: "Von:",
                 required: false,
                 html5: true,
                 class: "form-control" %>
    <%= f.input :bis,
                 as: :date,
                 autofocus: true,
                 label: "Bis:",
                 required: false,
                 html5: true,
                 class: "form-control" %>
    <%= f.input :anzahl, class:"small-input", label: "# Gäste", :input_html => {:style=> 'width: 75px; margin-left:5px;'} %>
  </div>
  <br>
  <div class="d-flex">
    <%= f.input :vorname, input_html: { style:"width:230px; margin-right:10px;" } %>
    <%= f.input :nachname, input_html: { style:"width:230px;" } %>
  </div>
  <div class="d-flex">
    <%= f.input :strasse, label: "Straße", input_html: { style:"width:380px; margin-right:10px;" } %>
    <%= f.input :nummer, label: "Nr.", :input_html => {:style=> 'width: 80px'} %>
  </div>
  <div class="d-flex">
    <%= f.input :plz, label: "PLZ", input_html: { style:"width:180px; margin-right:10px;" }%>
    <%= f.input :ort, input_html: { style:"width:280px;" } %>
  </div>
  <div class="d-flex">
    <%= f.input :telefon, label: "Telefonnummer", input_html: { style:"width:200px; margin-right:10px;" } %>
    <%= f.input :email, label: "Email", input_html: { style:"width:260px;" } %>
  </div>
  <div class="d-flex">
    <%= f.input :nachricht, input_html: { style:"width:470px;" }%>
  </div>
  <br>
  <%= f.submit "Anfrage schicken", class:"btn2" %>
<% end %>

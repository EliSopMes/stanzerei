
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <% count_button = 4 %>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
    <% if Rails.application.assets.find_asset("#{@flat.id}/AS_#{@flat.id}_ess.jpeg") != nil %>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= count_button %>" aria-label="Slide <%= count_button + 1%>"></button>
      <% count_button += 1 %>
    <% end %>
    <% if Rails.application.assets.find_asset("#{@flat.id}/AS_#{@flat.id}_galerie.jpeg") != nil %>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= count_button %>" aria-label="Slide <%= count_button + 1%>"></button>
      <% count_button += 1 %>
    <% end %>
    <% if Rails.application.assets.find_asset("#{@flat.id}/AS_#{@flat.id}_balkon.jpeg") != nil %>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= count_button %>" aria-label="Slide <%= count_button + 1%>"></button>
      <% count_button += 1 %>
    <% end %>
  </div>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="<%= image_path "#{@flat.id}/AS_#{@flat.id}_bad.jpeg"%>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Bad</h5>
      </div>
    </div>
    <div class="carousel-item">
      <img src="<%= image_path "#{@flat.id}/AS_#{@flat.id}_wohn.jpeg"%>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Wohnzimmer</h5>
      </div>
    </div>
    <div class="carousel-item">
      <img src="<%= image_path "#{@flat.id}/AS_#{@flat.id}_kueche.jpeg"%>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>KÃ¼che</h5>
      </div>
    </div>
    <div class="carousel-item">
      <img src="<%= image_path "#{@flat.id}/AS_#{@flat.id}_schlaf.jpeg"%>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Schlafzimmer</h5>
      </div>
    </div>
    <% if Rails.application.assets.find_asset("#{@flat.id}/AS_#{@flat.id}_ess.jpeg") != nil %>
      <div class="carousel-item">
      <img src="<%= image_path "#{@flat.id}/AS_#{@flat.id}_ess.jpeg"%>" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5>Esszimmer</h5>
        </div>
      </div>
    <% end %>
    <% if Rails.application.assets.find_asset("#{@flat.id}/AS_#{@flat.id}_galerie.jpeg") != nil %>
      <div class="carousel-item">
      <img src="<%= image_path "#{@flat.id}/AS_#{@flat.id}_galerie.jpeg"%>" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5>Galerie</h5>
        </div>
      </div>
    <% end %>
    <% if Rails.application.assets.find_asset("#{@flat.id}/AS_#{@flat.id}_balkon.jpeg") != nil %>
      <div class="carousel-item">
      <img src="<%= image_path "#{@flat.id}/AS_#{@flat.id}_balkon.jpeg"%>" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5>Balkon</h5>
        </div>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
